{
  "name": "indusagi-vscode",
  "displayName": "Indusagi AI Assistant",
  "description": "VS Code extension that uses Indusagi as an AI coding assistant",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.0.0"
  },
  "categories": [
    "Machine Learning",
    "Snippets"
  ],
  "activationEvents": [
    "onStartup"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "indusagi.ask",
        "title": "Ask Indusagi",
        "category": "Indusagi"
      },
      {
        "command": "indusagi.clear",
        "title": "Clear Context",
        "category": "Indusagi"
      }
    ],
    "configuration": {
      "title": "Indusagi Settings",
      "properties": {
        "indusagiPath": {
          "type": "string",
          "default": "indusagi",
          "description": "Path to indusagi CLI binary",
          "order": 1
        },
        "apiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key (optional, set via indusagi login)",
          "order": 2,
          "password": true
        },
        "model": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "Model to use",
          "order": 3
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p",
    "compile": "tsc -p",
    "watch": "tsc -p -watch",
    "package": "vsce package",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext .ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.0.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.0-next"
  }
}
