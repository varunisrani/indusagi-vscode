{
  "name": "indusagi-vscode",
  "displayName": "Indusagi AI Assistant",
  "description": "VS Code extension that uses Indusagi as an AI coding assistant",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.0.0"
  },
  "categories": [
    "Machine Learning",
    "Snippets"
  ],
  "activationEvents": [
    "onStartup"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "indusagi.ask",
        "title": "Ask Indusagi",
        "category": "Indusagi"
      },
      {
        "command": "indusagi.chat",
        "title": "Chat with Indusagi",
        "category": "Indusagi"
      },
      {
        "command": "indusagi.clear",
        "title": "Clear Context",
        "category": "Indusagi"
      },
      {
        "command": "indusagi.activate",
        "title": "Start Indusagi",
        "category": "Indusagi"
      },
      {
        "command": "indusagi.newSession",
        "title": "New Session",
        "category": "Indusagi"
      },
      {
        "command": "indusagi.getState",
        "title": "Get Session State",
        "category": "Indusagi"
      },
      {
        "command": "indusagi.cycleModel",
        "title": "Cycle Model",
        "category": "Indusagi"
      },
      {
        "command": "indusagi.cycleThinking",
        "title": "Cycle Thinking Level",
        "category": "Indusagi"
      },
      {
        "command": "indusagi.getStats",
        "title": "Get Session Stats",
        "category": "Indusagi"
      },
      {
        "command": "indusagi.exportHtml",
        "title": "Export to HTML",
        "category": "Indusagi"
      },
      {
        "command": "indusagi.compact",
        "title": "Compact Session",
        "category": "Indusagi"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "indusagi-sidebar",
          "title": "Indusagi AI",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "indusagi-sidebar": [
        {
          "type": "webview",
          "id": "indusagi.chatView",
          "name": "Chat"
        }
      ]
    },
    "configuration": {
      "title": "Indusagi Settings",
      "properties": {
        "indusagi-vscode.indusagiPath": {
          "type": "string",
          "default": "indusagi",
          "description": "Path to indusagi CLI binary",
          "order": 1
        },
        "indusagi-vscode.apiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key (optional, set via indusagi login)",
          "order": 2,
          "password": true
        },
        "indusagi-vscode.model": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "Model to use",
          "order": 3
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p tsconfig.json",
    "compile": "tsc -p tsconfig.json",
    "watch": "tsc -p -watch tsconfig.json",
    "package": "vsce package",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext .ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.0.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.0-next"
  }
}
